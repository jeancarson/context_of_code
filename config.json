{
    "database": {
        "host": "0.0.0.0",
        "port": 5432,
        "credentials": {
            "username": "admin",
            "password": "secret"
        }
    },
    "api": {
        "url": "https://api.example.com",
        "timeout": 30
    },
    "debug": true,
    "max_retries": 3,
    "flask": {
        "secret_key": "your-secret-key-here",
        "host": "0.0.0.0",
        "port": 5000
    },

    "logging_config": {
        "console_output": {
            "enabled": true,
            "level": "DEBUG", 
            "format": "%(asctime)s,%(levelname)s,%(name)s,%(message)s",
            "date_format": "%Y-%m-%d %H:%M:%S"
        },
        "file_output": {
            "enabled": true,
            "level": "DEBUG",
            "format": "%(asctime)s,%(levelname)s,%(name)s,%(filename)s,%(lineno)d,%(message)s",
            "date_format": "%Y-%m-%d %H:%M:%S",
            "log_dir": "logs",
            "filename": "app.log",
            "max_bytes": 10485760,
            "backup_count": 5
        }
    }
} 