{
    "server": {
        "host": "localhost",
        "port": 5000,
        "secret_key": "your-secret-key-here"
    },
    "cache": {
        "enabled": true,
        "duration_seconds": 30
    },
    "logging": {
        "console": {
            "enabled": true,
            "level": "INFO",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "date_format": "%Y-%m-%d %H:%M:%S"
        },
        "file": {
            "enabled": true,
            "level": "DEBUG",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "date_format": "%Y-%m-%d %H:%M:%S",
            "log_dir": "logs",
            "filename": "app.log",
            "max_bytes": 1000000,
            "backup_count": 5
        }
    },
    "database": {
        "db_name": "db.db"
    },
    "debug": false
}