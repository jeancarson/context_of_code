{
    "api": {
        "base_url": "http://localhost:5000"
    },
    "intervals": {
        "local": 20,
        "temperature": 3600,
        "exchange_rate": 3600,
        "send": 15
    },
    "logging": {
        "console": {
            "enabled": true,
            "level": "INFO",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "date_format": "%Y-%m-%d %H:%M:%S"
        },
        "file": {
            "enabled": true,
            "level": "DEBUG",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "date_format": "%Y-%m-%d %H:%M:%S",
            "log_dir": "logs",
            "filename": "local_app.log",
            "max_bytes": 10485760,
            "backup_count": 5
        }
    }
}
